{
  // Общие правила
  semi:           true,           // точка-с запятой в конце строки
  singleQuote:    true,           // одинарные кавычки
  trailingComma:  'all',          // запятая во всех списках
  printWidth:     80,             // максимальная длина строки
  tabWidth:       2,              // размер таба
  bracketSpacing: true,           // пробелы внутри { foo: bar }
  bracketSameLine: false,         // перенос окончания JSX-тега на новую строку
  arrowParens:    'always',       // (x) => x вместо x => x
  endOfLine:      'lf',           // единообразный перенос строк

  // Чувствительность HTML/CSS
  htmlWhitespaceSensitivity: 'css',

  // Плагин для Tailwind — сортирует классы по дефолту
